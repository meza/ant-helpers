<project name="shell">
    <description>
        Executing things differ on each os family. You must run the executable
        throu windows' cmd prompt on Win.
    </description>
    <macrodef name="shell">

        <attribute name="executable" />
        <attribute name="dir"            default="${basedir}" />
        <attribute name="outputproperty" default="" />
        <attribute name="failonerror"    default="true" />

        <element name="args" optional="yes" implicit="yes" />

        <sequential>
            <exec
                executable="cmd"
                failonerror="@{failonerror}"
                dir="@{dir}"
                outputproperty="@{outputproperty}"
            >
                <arg value="/c" />
                <arg value="@{executable}" /><args />
            </exec>
        </sequential>

    </macrodef>

</project>
